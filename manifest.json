{
  "manifest_version": 2,
  "name": "trueSelf",
  "version": "1.0",
  "description": "Replaces the text 'Ruby' with 'R.J.'",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "browser_action": {
    "default_icon": {
      "16": "images/flagSmall.png",
      "48": "images/flagMedium.png",
      "128": "images/flagLarge.png"
    },
    "default_title": "trueSelf",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "images/flagSmall.png",
    "48": "images/flagMedium.png",
    "128": "images/flagLarge.png"
  }
}
